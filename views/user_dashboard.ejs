    <div class="label_carousel">
        <p class="label_carousel_new poppins-bold">Explore new recipes</p>
    </div>

    <div class="flavorwell_carousel">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">

                <!-- Borrar los cuatro elementos y crear vista de partir de la base de datos -->
                <div class="carousel-item active">
                    <img src="" class="d-block w-100 flv_img_carousel" alt="..." id="new_breakfast_img_recipe">
                    <div class="carousel-caption">
                        <h1 class="recipe_name poppins-semibold" id="new_breakfast_name_recipe"></h1>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="" class="d-block w-100 flv_img_carousel" alt="..." id="new_dessert_img_recipe">
                    <div class="carousel-caption">
                        <h1 class="recipe_name poppins-semibold" id="new_dessert_name_recipe"></h1>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="" class="d-block w-100 flv_img_carousel" alt="..." id="new_strong_dish_img_recipe">
                    <div class="carousel-caption">
                        <h1 class="recipe_name poppins-semibold" id="new_strong_dish_name_recipe"></h1>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="" class="d-block w-100 flv_img_carousel" alt="..." id="new_vegan_img_recipe">
                    <div class="carousel-caption">
                        <h1 class="recipe_name poppins-semibold" id="new_vegan_name_recipe"></h1>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="label_carousel">
        <p class="label_carousel_search poppins-bold">Do you search something ?</p>
    </div>

    <section class="input_section">
        <div class="search_container">
